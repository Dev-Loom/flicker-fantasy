                    <div class="screen" style="text-align: center;">
                      <p style="color: white;">SCREEN THIS WAY</p>
                    </div>

                    <div class="row">
                      <div class="seat"></div>
                      <div class="seat"></div>
                    </div>
                    <div class="row">
                      <div></div>
                      <div></div>
                      <div class="seat"></div>
                      <div class="seat"></div>
                      <div class="seat"></div>
                      <div class="seat"></div>
                      <div></div>
                      <div></div>
                    </div>
                  </div>
                </div>
                <div class="movie-container2">

                  <div class="container">
                    <div class="screen" style="text-align: center;">
                      <p style="color: white;">SCREEN THIS WAY</p>
                    </div>
                    <div class="row">
                      <div class="seat"></div>
                      <div class="seat"></div>
                    </div>
                  </div>
                </div>
                <label style="color: black;">Select Date</label>
                <input style="text-align: center;" type="date" name="date" id="datepicker" min="" required />
                <div id="slotContainer" style="margin-left: 2rem;" class="mt-3"></div>
